{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "typeRoots": ["./src/customTypes", "./node_modules/@types"]
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}
